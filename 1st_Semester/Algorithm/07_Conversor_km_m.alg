algoritmo "Conversão quilometro/metro"
// Função : Converter quilometros em metros
// Autor : William Santos
// Data : 8/27/2018
var
   km: real
   metros: real
inicio
      //Linhas entrada de dados
      escreva ("Quantos quilometros? ")
      leia (km)
      //Processamento
      metros <- km * 1000
      //Saída
      escreval ("Conversão para metros: ", metros:5:2)
fimalgoritmo
